<h1>Edit Bat</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
<div class="form-group">
  Name: <input type="text" value="<%= @product.name%>" class="form-control" name="name">
</div>
<div class="form-group">
  Color: <input type="text" value="<%= @product.color%>" class="form-control" name="color">
</div>
<div class="form-group">
  Disposition: <input type="text" value="<%= @product.disposition%>" class="form-control" name="disposition">
</div>
<div class="form-group">
  Image: <input type="text" value="<%= @product.image%>" class="form-control" name="image">
</div>
<div class="form-group">
  Price: <input type="text" value="<%= @product.price%>" class="form-control" name="price">
</div>
<input type="submit" value="Edit Bat!">
<% end %>